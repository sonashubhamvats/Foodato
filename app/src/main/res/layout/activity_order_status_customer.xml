<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderStatusCustomer"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/txtorderstatus"
        android:layout_width="384dp"
        android:layout_height="82dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="14dp"
        android:text="Your Order Status-"
        android:textColor="#fff"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/custpromptorderstatus"
        android:layout_width="384dp"
        android:layout_height="80sp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="14dp"
        android:text="Looks empty here, order more?"
        android:textColor="#ff4969"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtorderstatus" />

    <ListView
        android:id="@+id/custListOrderStatus"
        android:layout_width="379dp"
        android:layout_height="324dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_listview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custpromptorderstatus" />

    <Button
        android:id="@+id/custOrderStatusRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="38dp"
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"
        android:onClick="OnClickRefreshNoti"
        android:text="Refresh"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custListOrderStatus" />

    <Button
        android:id="@+id/custOrderStatusDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="203dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="38dp"
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"
        android:onClick="deleteNotiCust"
        android:text="Delete"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/custOrderStatusRefresh"
        app:layout_constraintTop_toBottomOf="@+id/custListOrderStatus" />

</androidx.constraintlayout.widget.ConstraintLayout>