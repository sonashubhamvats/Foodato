<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCreateMenu"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/txtadminAddMenu"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="191dp"
        android:text="Add Menu"
        android:textColor="#ffff"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtadminErrorPrompt"
        android:layout_width="380sp"
        android:layout_height="52dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="13dp"
        android:text="Menu is empty- add your dishes!!"
        android:textColor="#ffff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtadminAddMenu" />

    <ListView
        android:id="@+id/adminListofmenu"
        android:layout_width="373dp"
        android:layout_height="177dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/custom_listview"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtadminErrorPrompt" />

    <EditText
        android:id="@+id/adminNameOfTheDish"
        android:layout_width="369dp"
        android:layout_height="43dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:hint="Name of the dish"
        android:inputType="textPersonName"
        android:paddingStart="15sp"
        android:background="@drawable/custom_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminListofmenu" />

    <EditText
        android:id="@+id/adminPriceOfTheDish"
        android:layout_width="250dp"
        android:paddingStart="15sp"
        android:background="@drawable/custom_input"
        android:layout_height="43dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="144dp"
        android:ems="10"
        android:hint="Price of the dish"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminNameOfTheDish" />

    <Button
        android:id="@+id/adminAddToTheMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="306dp"
        android:onClick="ClickOfAddAdmin"
        android:text="Add"
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminPriceOfTheDish" />


</androidx.constraintlayout.widget.ConstraintLayout>