<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDashBoard"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/custRestnameDashboard"
        android:layout_width="388dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="9dp"
        android:text="VIT-Restaurant"
        android:textColor="#ffff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/custusernameDashboard"
        android:layout_width="388dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="9dp"
        android:text="Hello Sona!!"
        android:textColor="#ffff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custRestnameDashboard" />

    <TextView
        android:id="@+id/txtdash"
        android:layout_width="388dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="7dp"
        android:text="Dashboard"
        android:textColor="#ffff"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custusernameDashboard" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="406dp"
        android:layout_height="197dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtdash">

        <Button
            android:id="@+id/custOrder"
            android:layout_width="100dp"
            android:layout_height="175dp"
            android:layout_marginHorizontal="20sp"
            android:textColor="#ffff"
            android:textAllCaps="false"
            android:background="@drawable/custom_button"
            android:layout_weight="1"
            android:onClick="OnClickOfOrder"
            android:text="Order Now!!" />

        <Button
            android:id="@+id/custOrderStatusButton"
            android:layout_width="100dp"
            android:layout_height="175dp"
            android:textColor="#ffff"
            android:textAllCaps="false"
            android:background="@drawable/custom_button"
            android:layout_marginHorizontal="20sp"
            android:layout_weight="1"
            android:onClick="ViewOrderStatus"
            android:text="View Order Status" />
    </LinearLayout>

    <Button
        android:id="@+id/custProfileButton"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/custom_button"
        android:onClick="OnclickOfProfile"
        android:text="Profile"
        android:textAllCaps="false"
        android:textColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>