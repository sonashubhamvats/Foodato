<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChefOrderSelection"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="359dp"
        android:layout_height="102dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="38dp"
        android:text="Orders"
        android:textColor="#ffff"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chefOrderPrompt"
        android:layout_width="348dp"
        android:layout_height="44dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="41dp"
        android:text="No orders for now!!"
        android:textColor="#ff4969"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ListView
        android:id="@+id/cheflistofordersPending"
        android:layout_width="345dp"
        android:layout_height="292dp"
        android:layout_marginStart="22dp"
        android:background="@drawable/custom_listview"

        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chefOrderPrompt" />

    <Button
        android:id="@+id/chefCompleteOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="80dp"
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"

        android:onClick="onClickOfDoneChef"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chefRefresh"
        app:layout_constraintTop_toBottomOf="@+id/cheflistofordersPending" />

    <Button
        android:id="@+id/chefRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="78dp"
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"

        android:onClick="OnClickOfRefreshChef"
        android:text="Refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cheflistofordersPending" />
</androidx.constraintlayout.widget.ConstraintLayout>