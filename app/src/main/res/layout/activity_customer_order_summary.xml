<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerOrderSummary"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="32dp"
        android:text="Current Order Status"
        android:textColor="#fff"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/custListofTempOrder"
        android:layout_width="381dp"
        android:layout_height="275dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/custom_listview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="368dp"
        android:layout_height="187dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="17dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custListofTempOrder"
        app:rowCount="2">

        <Button
            android:id="@+id/custOrderMore"
            android:layout_width="201dp"
            android:layout_height="76dp"
            android:layout_margin="10sp"
            android:textColor="#ffff"
            android:textAllCaps="false"
            android:background="@drawable/custom_button"

            android:onClick="onClickOfOrderMore"
            android:text="Order More"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/custtotalPrice"
            android:layout_width="119dp"
            android:layout_height="53dp"
            android:layout_margin="10sp"
            android:text="TextView"
            android:background="@drawable/custom_text_view"
            android:padding="15sp"
            android:textColor="#ffff"
            app:layout_column="1"
            app:layout_row="0" />

        <EditText
            android:id="@+id/custorderAddress"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:paddingStart="15sp"
            android:background="@drawable/custom_input"
            android:textColor="#ff4969"
            android:layout_margin="10sp"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Enter ur address"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/custOrderProceed"
            android:layout_width="112dp"
            android:layout_height="38dp"
            android:layout_margin="10sp"
            android:onClick="OnClickOfProceed"
            android:textColor="#ffff"
            android:textAllCaps="false"
            android:background="@drawable/custom_button"

            android:text="Proceed"
            app:layout_column="1"
            app:layout_row="1" />
    </androidx.gridlayout.widget.GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>