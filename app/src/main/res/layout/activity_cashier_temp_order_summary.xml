<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CashierTempOrderSummary"
    android:background="@drawable/background">
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="32dp"
        android:text="Current Order Status"
        android:textColor="#fff"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/cashierListofTempOrder"
        android:layout_width="381dp"
        android:layout_height="275dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/custom_listview"

        android:layout_marginTop="109dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="389dp"
        android:layout_height="169dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="46dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cashierListofTempOrder"
        app:rowCount="2">

        <Button
            android:id="@+id/cashierOrderMore"
            android:layout_width="201dp"
            android:layout_height="76dp"
            android:layout_margin="10sp"
            android:onClick="onClickOfOrderMoreCashier"
            android:text="Order More"
            app:layout_column="0"
            android:textColor="#ffff"
            android:textAllCaps="false"
            android:background="@drawable/custom_button"

            app:layout_row="0" />

        <TextView
            android:id="@+id/cashiertotalPrice"
            android:layout_width="119dp"
            android:layout_height="53dp"
            android:layout_margin="10sp"
            android:text="TextView"
            android:background="@drawable/custom_text_view"
            android:padding="15sp"
            android:textColor="#ffffff"

            app:layout_column="1"
            app:layout_row="0" />

        <EditText
            android:id="@+id/cashierorderAddress"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="10sp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Table No"
            android:inputType="textMultiLine"
            android:paddingStart="15sp"
            android:scrollbars="vertical"
            android:textColor="#ff4969"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/cashierOrderProceed"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:onClick="OnClickOfProceedCashier"
            android:text="Proceed"
            android:textColor="#ffff"
            android:textAllCaps="false"
            android:background="@drawable/custom_button"

            app:layout_column="1"
            app:layout_row="1" />
    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>